
<div id="background" style="position:relative;">
	<% if params[:sign_in] == "true"%>
		<div class="row">
			<div class="col-sm-6">
				<div class="col-md-8 offset-md-2">
					<div class="card border-dark mb-3" style="width:25rem;margin-top:25%;">
					  <div class="card-body text-dark">
						    <h2 class="card-title">Sign In</h2>
						    <p class="card-text">
						    	<div id="clearance" class="sign-in animated fadeIn">
								  <%= render partial: '/sessions/form' %>
								</div>
						    </p>
					  </div>
					</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="col-md-8 offset-md-2">
					<div class="card border-dark mb-3" style="width:25rem;margin-top:25%;">
					  <div class="card-header">Chronos</div>
					  <div class="card-body text-dark">
					    <h5 class="card-title">Dark card title</h5>
					    <p class="card-text">
					    	<li></li>
					    	<li></li>
					    	<li></li>
					    </p>
					  </div>
					</div>
				</div>
			</div>
		</div>	
		
	<%else%>

		<div>
			<h1 style="position:absolute;top:40%;left:50%;transform:translate(-50%,-50%);color:black">Chronos</h1>
			<h2 id="typed-strings" style="position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);color:black"></h2>

			<div style="position:absolute;top:60%;left:50%;transform:translate(-50%,-50%);">
				<%= link_to "Sign-in",sign_in_path(sign_in:"true"),class:"btn btn-danger btn-large"%>
			</div>
		</div>
	 
	<%end%>
</div>
