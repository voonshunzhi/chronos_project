<div class="container" style="margin-bottom:100px">
    <div id="background">
        <div id="hypertension-record" class="container" style="padding-bottom:100px">
            <h3 style="padding-top:10px"><strong>Hypertension's record : <small id="modal-title"></small ></strong></h3>
            <div id="flash">
              <% flash.each do |key, value| -%>
                <div id="flash_<%= key %>" class="alert alert-<%=key%> d-flex justify-content-center" ><%= value %></div>
              <% end %>
            </div>
            <% if @history.any? %>
                <table class="table table-striped table-sm">
                            <thead>
                              <tr>
                                <th>SBP</th>
                                <th>DBP</th>
                                <th>Notes</th>
                                <th>Medication</th>
                                <th>Time Created</th>
                                <th>Points Gained</th>
                              </tr>
                            </thead>
                            <tbody>
                                
                                    <% @history.each do |history|%>
                                    <tr>
                                        <td><%= history.SBP %></td>
                                        <td><%= history.DBP %></td>
                                        <td><%= history.notes %></td>
                                        <td><%= history.medication? ? history.medication : "-----" %></td>
                                        <td><%= time_ago_in_words(history.created_at)%> ago</td>
                                        <td><span class="badge badge-warning">+30</td>
                                    </tr>
                                    <% end %>
                                
                            </tbody>
                </table>
                
            <% else %>
                <%= content_tag("div","No history of your daily record.")%>
            <% end %>
        </div>
    </div>
</div>