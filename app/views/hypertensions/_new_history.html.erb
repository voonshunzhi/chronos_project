<% unless !@patient.health_record.hypertensions.where(created_at: Date.current.beginning_of_day..Date.current.end_of_day).empty? && current_user.role == "patient"%>
    <%= form_for @hypertension,url:hypertensions_path(id:@patient),remote:true do |form|%>
        <%if current_user.role == 'doctor' || current_user.role == 'admin'%>
            <div class="row">
                <div class="col-md-3">
                    <%= form.label :medication,"Medication :"%>
                </div>
                <div class="col-md-8">
                    <%= form.text_field :medication,class:"form-control"%>
                </div>
            </div>
        <%end%>

        <div class="row">
            <div class="col-md-3">
                    <%= form.label :SBP, "Systolic Blood Pressure :"%>
            </div>
            <div class="col-md-8">
                    <%= form.text_field :SBP,class:"form-control"%>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                  <%= form.label :DBP,"Distolic Blood Pressure :"%>
            </div>
            <div class="col-md-8">
                  <%= form.text_field :DBP,class:"form-control"%>
            </div>
            
        </div>
        <div class="row">  
            <div class="col-md-3">
                  <%= form.label :notes,"Notes :"%>
            </div>
            <div class="col-md-8">
                  <%= form.text_field :notes,class:"form-control"%>
            </div>  
        </div>


        <div class="col-md-12" style="margin:5px;">
            <%= form.submit "Create!",class:"btn btn-success",style:"width:100%"%>
        </div>

    <%end%>
<%else%>
    <div>
        <%= content_tag "strong", "You have already made a record today!"%>
    </div>
<%end%>


<div class="col-md-12" style="margin:5px;">
    <%= link_to 'History',"#",class:"btn btn-primary",style:"width:100%",data: { toggle: 'modal', target:"#exampleModalCenter" },onclick:"$(this).parent().fadeOut();$(document).find('#record-input').show()"%>
            </div>
