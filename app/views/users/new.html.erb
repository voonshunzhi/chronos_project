<div id="background">
  <div class="row">
    <div class="col-md-6">
      AFFSAF
    </div>
    <div class="col-md-6">
      <div id="clearance" class="d-block"> 
    <div class="d-flex justify-content-center" >
      <div class="card p-5 col-md-6 col-lg-4 col-12 animated fadeIn" style="margin-top:10px;">
        <h2><%= t(".title") %></h2>
        <br>
        <% if params[:sign_up] == 'doctor' %>
          <% x = 'doctor' %>
        <% else %>
          <% x = 'patient' %>
        <% end %>

        <%= form_for @user, url: users_path(sign_up: x) do |form| %>
          <%= render partial: '/users/form', object: form %>

          <div class="submit-field">
            <%= form.submit "Submit", class: "btn btn-primary btn-block mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
    </div>
  </div>
  
</div>
