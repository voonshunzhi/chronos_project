<% unless !@patient.health_record.obeses.where(created_at: Date.current.beginning_of_day..Date.current.end_of_day).empty? && current_user.role == "patient"%>
		<%= form_for @obese,url:obeses_path(id:@patient),remote:true do |form|%>
			<div class="row">
				<div class="col-md-4">
                    <%= form.label :weight,"Weight :"%>
                </div>
                <div class="col-md-8">
                    <%= form.text_field :weight%>
                </div>
			</div>
			<div class="row">
				<div class="col-md-4">
                    <%= form.label :height,"Height :"%>
                </div>
                <div class="col-md-8">
                    <%= form.text_field :height%>
                </div>
			</div>
			<div class="row">
				<div class="col-md-4">
                    <%= form.label :waist_circumference,"Waist Circumference :"%>
                </div>
                <div class="col-md-8">
                    <%= form.text_field :waist_circumference%>
                </div>
			</div>
			<div class="row">
				<div class="col-md-4">
                    <%= form.label :notes,"Notes :"%>
                </div>
                <div class="col-md-8">
                    <%= form.text_field :notes%>
                </div>    
			</div>
			<div class="col-md-12" style="margin:5px;">
				<%= form.submit "Create!",class:"btn btn-success",style:"width:100%;"%>
			</div>
			
		<% end %>
	<%else%>
		<div>
			<%= content_tag "strong", "You have already made a record today!"%>
		</div>
	<%end%>

<div class="col-md-12" style="margin:5px;">
				<%= link_to 'History',"#",class:"btn btn-primary",style:"width:100%",data: { toggle: 'modal', target:"#exampleModalCenter" },onclick:"$(this).parent().fadeOut();$(document).find('#record-input').show()"%>
			</div>
