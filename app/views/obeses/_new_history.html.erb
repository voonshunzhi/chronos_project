<% unless !@patient.health_record.obeses.where(created_at: Date.current.beginning_of_day..Date.current.end_of_day).empty? && current_user.role == "patient"%>
		<%= form_for @obese,url:obeses_path(id:@patient),remote:true do |form|%>
			<div>
			    <%= form.label :weight,"Weight :"%>
			    <%= form.text_field :weight%>
			</div>
			<div>
			    <%= form.label :height,"Height :"%>
			    <%= form.text_field :height%>
			</div>
			<div>
			    <%= form.label :waist_circumference,"Waist Circumference :"%>
			    <%= form.text_field :waist_circumference%>
			</div>
			<div>    
			    <%= form.label :notes,"Notes :"%>
			    <%= form.text_field :notes%>
			</div>
		<%= form.submit "Create!"%>
		<% end %>
	<%else%>
		<div>
			<%= content_tag "strong", "You have already made a record today!"%>
		</div>
	<%end%>

<%= link_to 'History',"#",class:"btn btn-primary",data: { toggle: 'modal', target:"#exampleModalCenter" },onclick:"$(this).fadeOut()"%>