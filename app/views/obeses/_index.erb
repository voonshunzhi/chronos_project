<div id="background" class="container">
    <div id="obese-record" class="container" style="padding-bottom:100px">
        <h3>Obeses's record : <small id="modal-title"></small ></h3>
        <div id="flash">
          <% flash.each do |key, value| -%>
            <div id="flash_<%= key %>" class="alert alert-<%=key%> d-flex justify-content-center" ><%= value %></div>
          <% end %>
        </div>
        <% if @history.any? %>
            <table class="table table-striped table-sm">
                        <thead>
                          <tr>
                            <th>Weight</th>
                            <th>Height </th>
                            <th>Waist Circumference</th>
                            <th>Notes</th>
                            <th>Time Created</th>
                            <th>Points Gained</th>
                          </tr>
                        </thead>
                        <tbody>
                            <tr>
                                 <% @history.each do |history|%>
                                    <td><%= history.weight %></td>
                                    <td><%= history.height %></td>
                                    <td><%= history.waist_circumference %></td>
                                    <td><%= history.notes %></td>
                                    <td><%= time_ago_in_words(history.created_at)%> ago</td>
                                    <td><span class="badge badge-warning">+30</td>
                                <% end %>
                            </tr>
                        </tbody>
                      </table>
            
        <% else %>
            <%= content_tag("div","No history of your daily record.")%>
        <% end %>
    </div>
</div>