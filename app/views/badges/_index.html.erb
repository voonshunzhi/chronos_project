<div class="row">
	<div class="col-md-11 col-md-offset-1">
		<%= link_to "Add Badge",new_badge_path,class:"btn btn-primary",remote:true%>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
	  <div class="table-responsive">
	  	  <% flash.each do |key,msg|%>
	  	  	<div class="alert alert-<%=key%>"><%= msg%></div>
	  	  <% end %>
		  <% if @badges.any? %>
			  <table class="table table-striped table-sm">
			    <thead>
			      <tr>
			        <th>Name</th>
			        <th>Description</th>
			        <th>Image</th>
			      </tr>
			    </thead>
			    <tbody>
			      	<% @badges.each do |r|%>
			    	    <tr>
			    	      <%= content_tag "td",r.name%>
			    	      <%= content_tag "td",r.description%>
			              <td><%= image_tag r.image.url,style:"width:60px"%></td>
			    	    </tr>
			        <% end %>
			      
			    </tbody>
			  </table>
		  <%else%>
			    <%= content_tag "strong","There isn't any badge."%>
		  <%end%>
	  </div>
	</div>
	<div class="col-md-6" id="field">
	</div>
</div>